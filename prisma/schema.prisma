generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

mode Admin {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  role String?
  code String?
  firstname String?
  lastname String?
  othername String?
  email String?
  phonenumber String?
  password String?
  description String?
  
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  username String?
  firstname String?
  lastname String?
  othername String?
  programme String?
  level String?
  semester String?
  email String?
  phonenumber String?
  password String?
  
}

model Post {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String?
  description String?
  
}

model Programme {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String?
  slogan String?
  department String?
  educationalLevel String?
  description String?
  
}

model Course {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String?
  code String?
  subtitle String?
  programme String?
  level String?
  semester String?
  description String?
  
}

model Level {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String?
  value Number?
  
}

model Semester {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String?
  value Number?
  
}

model File {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String?
  type String?
  category String?
  uploadfile String?
  uploadimg String?
  author String?
  
}

model FileCategory {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  category String?
  description String?
  
}

model FileType {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  type String?
  description String?
  
}